{{#each ideas_Object}}
<div class="card card-body">
    <div class="row">
        <div class="col-sm-10">
            <h4>{{title}}</h4>
            <p>{{details}}</p>
        </div>
        <div class="col-sm-2">
            <form action="/ideas/{{id}}?_method=DELETE" method="post">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit" class="btn btn-danger float-right m-1">
                    <img src="/img/delete.png" alt="No icon" />
                </button>
            </form>
            <a href="/ideas/edit/{{id}}" class="btn btn-primary float-right m-1">
                <img src="/img/edit.png" alt="No icon" />
            </a>
        </div>
    </div>
</div>
{{else}}
<div class="card card-body">
    <p>No have any ideas</p>
</div>
{{/each}}